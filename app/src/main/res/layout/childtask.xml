<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/childtask_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/common_text_lightblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/childtask_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/childtask_name"
            android:layout_weight="3"
            android:text="" />

        <ImageView
            android:id="@+id/isfinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/childtask_time"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/yes_sure" />
    </LinearLayout>

</LinearLayout>