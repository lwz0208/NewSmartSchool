<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="15dip"
        android:text="\t\t点击下面长条可扫描二维码\n该功能可让被扫描座位状态变为空闲"
        android:textColor="#888888"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_lib_seat_admin"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginStart="15dip"
            android:layout_weight="0.80"
            android:clickable="true"
            android:background="@drawable/item_lib_seat_appo_center_selector"
            android:orientation="vertical"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="该功能仅用于释放座位"
                android:textColor="#f00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_appoint_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginStart="15dip"
                android:layout_marginTop="15dip"
                android:paddingBottom="10dip"
                android:text="正常使用请使用右上角的按钮进入"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appoint_center_tip"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dip"
            android:layout_marginRight="15dip"
            android:layout_weight="0.20"
            android:background="@color/dark_red"
            android:gravity="center"
            android:text="点击进入扫码"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="武汉科技大学图书馆"
        android:textColor="#888888"
        android:textSize="13sp" />

</LinearLayout>