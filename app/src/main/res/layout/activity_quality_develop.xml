<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F2"
    tools:context="com.wust.newsmartschool.ui.QualityDevelopActivity" >

    <include
        android:id="@+id/QD_Head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head_title" />

    <LinearLayout
        android:id="@+id/QD_Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/QD_Head"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quality_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="公告通知"
            android:textColor="#ffc80000" />

        <TextView
            android:id="@+id/quality_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="新闻动态"
            android:textColor="#ff969696" />

        <TextView
            android:id="@+id/quality_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="素拓介绍"
            android:textColor="#ff969696" />

        <TextView
            android:id="@+id/quality_tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="职业导航"
            android:textColor="#ff969696" />
    </LinearLayout>

    <ImageView
        android:id="@+id/QD_ImgMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/QD_Title"
        android:scaleType="centerCrop"
        android:src="@drawable/a" />

    <android.support.v4.view.ViewPager
        android:id="@+id/QD_news_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/QD_ImgMark" />

</RelativeLayout>