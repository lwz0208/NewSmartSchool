<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="请选择校区:"
                android:textColor="#888888"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_campus1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="请选择阅览室:"
                android:textColor="#888888"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_room1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_onekey_appoint"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/reserve_seat_selector"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="立即预约" />

    <TextView
        android:id="@+id/tv_message_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="5dip"
        android:clickable="true"
        android:gravity="center"
        android:text="一键预约可以预约指定阅览室随机座位一个\n若欲预约指定座位请前往高级预约"
        android:textColor="#888888"
        android:textSize="13sp" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约结果："
            android:textColor="#888888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_appo_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#302d2c"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>