<com.layout.MyLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Trainning_Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F2"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head_title" />

    <LinearLayout
        android:id="@+id/Trainning_LL1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_emptyclassroom_spinner"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/kcxz"
            android:textColor="#A8A8A8"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_kcxz"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:prompt="@string/kcxz"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <com.myView.ClearEditText
        android:id="@+id/clear_search_edittext"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_emptyclassroom_spinner"
        android:drawableLeft="@drawable/magnifying_glass"
        android:hint="搜索课程名"
        android:textColorHint="#A8A8A8"
        android:singleLine="true"
        android:textSize="16sp" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="@color/dividercolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#E9E7E1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TainningCourse_id"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="课程号" />

        <TextView
            android:id="@+id/TainningCourse_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="课程名称" />

        <TextView
            android:id="@+id/TainningCourse_time"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="总学时" />

        <TextView
            android:id="@+id/TainningCourse_credit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="学分" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/dividercolor" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="@color/dividercolor" />

    <ListView
        android:id="@+id/TainningCourse_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/dividercolor" />

</com.layout.MyLinearLayout>