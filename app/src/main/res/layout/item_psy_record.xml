<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70.5dp"
    android:background="@drawable/news_bg"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/psy_record_expertimg"
            android:layout_width="50.5dp"
            android:layout_height="50.5dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10.5dp"
            android:layout_marginLeft="8.5dp"
            android:layout_marginTop="10.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher2" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/node"
            android:layout_toRightOf="@id/psy_record_expertimg" >

            <TextView
                android:id="@+id/psy_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1.5dp"
                android:maxLines="2"
                android:text="2014年10月3日"
                android:textColor="@color/black"
                android:textSize="13.5dp" />

            <TextView
                android:id="@+id/psy_expertname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:gravity="left|bottom"
                android:lines="1"
                android:text="刘小备"
                android:textColor="#878787"
                android:textSize="10.5dp" />
            <TextView
                android:id="@+id/psy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@id/psy_expertname"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:lines="1"
                android:text="A类心理问题"
                android:textColor="#878787"
                android:textSize="10.5dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/node"
            android:layout_width="15.5dp"
            android:layout_height="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10.5dp"
            android:layout_marginLeft="8.5dp"
            android:layout_marginTop="10.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/psy_node" />
    </RelativeLayout>

</LinearLayout>