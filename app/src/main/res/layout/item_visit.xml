<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/common_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/top_bottom_line" />

        <ImageView
            android:id="@+id/head_jflow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ease_default_avatar" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/top_bottom_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_jflowtrack_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_jflow"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="@color/gray_ios"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jflowtrack_time"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textColor="@color/spilt_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_jflowtrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/jflowdetail_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/jflowtrack_titleimg"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/jflowtrack_nexttips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="当前审核人:"
                    android:textColor="@color/orange"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/jflowtrack_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#000000" />


            </LinearLayout>

            <TextView
                android:id="@+id/jflowtrack_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/jflowend_tips"
            style="@style/common_topbar_text_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="该流程已经结束"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>