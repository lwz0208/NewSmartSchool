<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical">

        <include layout="@layout/ease_commom_back_btn" />

        <TextView
            style="@style/common_topbar_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:text="一卡通号"
                android:textSize="14sp"
                android:typeface="serif"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/tv_card_number"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:hint="请输入您的一卡通号"
                android:inputType="numberSigned"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:text="姓名"
                android:textSize="14sp"
                android:typeface="serif"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:hint="请输入您的姓名"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:text="联系方式"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:hint="请输入您的联系方式"
                android:inputType="phone"
                android:textSize="16sp"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/tv_feedback_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="10dip"
                android:text="反馈意见  *"
                android:textSize="14sp"
                android:typeface="serif"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:gravity="left|top"
                android:hint="请输入您的反馈意见"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textSize="16sp"
                />

            <!--    <Button
                    android:id="@+id/btn_feedback_commit"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/reserve_seat_selector"
                    android:textColor="@color/white"
                    android:text="提交反馈"
                    android:textSize="17sp" >
                </Button>-->

            <Button
                android:id="@+id/btn_feedback_commit"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:textColor="@color/white"
                android:text="提交反馈"
                android:textSize="17sp" >
            </Button>

        </LinearLayout>
    </ScrollView>

</LinearLayout>